{
    // WINDOW APPEARANCE AND BEHAVIOR
    "window.commandCenter": false,    
    "window.title": "${activeEditorShort}${separator}${rootName}",  //allazei to name sto kentro panw
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": 1.5,


    // EDITOR APPEARANCE AND BEHAVIOR
    "editor.minimap.enabled": false,
    "editor.guides.indentation": false,
    // "editor.guides.highlightActiveIndentation": false,
    "editor.stickyScroll.enabled": false,
    // "editor.fontFamily": "Cascadia Code, Consolas, 'Courier New', monospace",
    // "editor.lineHeight": 1.5,     // auto exei mega potential
    "editor.hideCursorInOverviewRuler": true,        // auto kanei hide apo to scrollbar na deixnei pou einai to cursor sto file                                                                                                             
    "editor.renderWhitespace": "none",       // pairnei boundary, all, none
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 20,
    "editor.overviewRulerBorder": false,    // auto vgazei to asxhmo pragma border ap to scrollbar. ara den xreiazetai na to allakseis apo to css re file
    "editor.glyphMargin": false,            //  margin sto plai. mporei na einai wraio
    "editor.padding.top": 0,         // margin sto top katw apo ta open tabs
    "editor.folding": false,                // folding kwdika
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    // "editor.lineDecorationsWidth": 0,
    // "editor.lineNumbers": "off",
    "editor.fontSize": 12,
    
    // "editor.bracketPairColorization.enabled": true,
    // "editor.guides.bracketPairs": "active",
    // "editor.guides.bracketPairsHorizontal": true ,

    "editor.tokenColorCustomizations": {
        "[React Dev Theme (light)]": {
        "textMateRules": [
            {
                "scope": [
                    "constant.language.json.comments",
                    "constant.language.python", 
                    "constant.language"
                ],
                "settings": {
                    "foreground": "#00ff00"  // Replace with your preferred color
                }
            }
        ]
    }
    },

    // FILE EXPLORER SETTINGS
    "symbols.hidesExplorerArrows": true,
    "explorer.compactFolders": false,
    "explorer.openEditors.visible": 1,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.autoReveal": true,

    // BREADCRUMBS SETTINGS
    "breadcrumbs.enabled": false,
    "breadcrumbs.icons": false,


    // WORKBENCH CONFIGURATION
